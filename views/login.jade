extends layout

block content
  form.loginsignup(action="/login" method="post")
    h1 User Log In
    .inset
      p: label(for="email") Email Address:
        input(type="text" name="email" id="email")
      p: label(for="password") Password:
        input(type="password" name="password" id="password")
      p: label(for="remember") Remember Me 
        input(type="checkbox" name="remember" id="remember")
      p: .p-container: span
        a(href="signup") SignUp
        a(href="#") Forgot Password?

        p: input(type="submit" name='go' value="User Log In")
        p.logonbtn#facebooklog: a(href='auth/facebook') Sign in with Facebook
        p.logonbtn#googlelog: a(href='/auth/google') Sign in with Google
        p.logonbtn#tweetlog: a(href='/auth/twitter'): img(src='/img/twitter-link.png' alt='signin with twiter')
        p.logonbtn#githublog: a(href='/auth/github') Sign in with GitHub
