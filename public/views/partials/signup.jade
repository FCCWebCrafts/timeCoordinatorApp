.loginsignup
  h1 User Sign Up
  .inset
    form(ng-submit='signUp()')
      label(for='name') Name:
      input.form-control(type='text' name='name' id='name' ng-model='credentials.name' ng-required='false')
      label(for="email") Email Address:
      input.form-control(type="email" name="email"  ng-model='credentials.email' ng-required='true')
      label(for="password") Password:
      input.form-control(type="password" name="password" ng-model='credentials.password' ng-required='true')
      label(for="remember")
      button.btn.logonbtn(type="submit") {{buttonText}}